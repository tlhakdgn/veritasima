<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="https://image.tmdb.org/t/p/w500/dXyIK3s8ZN7FH3AoaeyaBqX0eoJ.jpg" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                <p class="card-text">
                    <small class="text-muted">
                    @foreach(var item in Model.Players)
                    {
                        <li><b>@item</b></li>
                    }
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
